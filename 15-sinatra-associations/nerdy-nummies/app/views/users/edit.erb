<h1>Edit Form For <%= @user.name %></h1>

<form method="POST" action="/users/<%= @user.id %>">
    <input type="hidden" name="_method" value="PATCH">
    <label for="user[name]">Name:</label>
    <input type="text" name="user[name]" value=<%= @user.name %>><br>

    <label for="user[age]">Age:</label>
    <input type="number" name="user[age]" value=<%= @user.age %>><br>

    <label for="user[fave_foods]">Favorite Foods:</label>
    <input type="text" name="user[fave_foods]" value=<%= @user.fave_foods %>><br>

    <label for="user[bio]">Bio:</label>
    <input type="text" name="user[bio]" value=<%= @user.bio %>><br>
    <br>
    <input type="submit" value="Edit User">
</form> 